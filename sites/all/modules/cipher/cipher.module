<?php
  function cipher_menu(){
    $items['cipher'] = array(
      'title' => 'Shift Cipher',
      'page callback' => 'drupal_get_form',
      'page arguments' => array('cipher_form'),
      'access callback' => TRUE,
      'type' => MENU_NORMAL_ITEM,
    );
    $items['result'] = array(
      'title' => 'Shift Cipher Result',
      'page callback' => 'cipher_success',
      'access callback' => TRUE,
      'type' => MENU_CALLBACK,
    );
    return $items;
  }

  function cipher_form()
  {
    $form['input'] = array(
      '#title'=> 'Input string',
      '#description' => 'Enter the word you want to cipher',
      '#type' => 'textfield',
    );
    $form['value'] = array(
      '#title'=> 'Input value',
      '#description' => 'Enter the shift cipher value',
      '#type' => 'textfield',
    );
    $form['direction'] = array(
      '#title'=> 'Input direction',
      '#description' => 'Enter the shift cipher direction',
      '#type' => 'textfield',
    );
    return $form;
  }
